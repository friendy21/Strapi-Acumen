{
    "kind": "singleType",
    "collectionName": "site_setting",
    "info": {
        "singularName": "site-setting",
        "pluralName": "site-settings",
        "displayName": "Site Settings",
        "description": "Global site configuration and metadata"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "siteName": {
            "type": "string",
            "default": "Acumen Blog"
        },
        "siteDescription": {
            "type": "text"
        },
        "logo": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "favicon": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "defaultSeo": {
            "type": "component",
            "repeatable": false,
            "component": "shared.seo"
        },
        "socialLinks": {
            "type": "component",
            "repeatable": true,
            "component": "shared.social-link"
        }
    }
}