{
    "extends": "@strapi/typescript-utils/tsconfigs/server",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "config/**/*.ts",
        "config/**/*.js"
    ],
    "exclude": [
        "node_modules/",
        "build/",
        "dist/",
        ".cache/",
        ".tmp/",
        "src/admin/",
        "**/*.test.ts",
        "src/plugins/**"
    ]
}